{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um clone do https://tabnews.com.br feito atr√°ves do https://curso.dev do Filipe Deschamps.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run services:wait:database && npm run migration:up && next dev",
    "docker:up": "docker compose --file 'infra/compose.yaml' up -d",
    "docker:stop": "docker compose --file 'infra/compose.yaml' stop",
    "docker:down": "docker compose --file 'infra/compose.yaml' down",
    "services:wait:database": "node infra/scripts/wait-for-postgress.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run docker:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.14",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "secretlint": "9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
